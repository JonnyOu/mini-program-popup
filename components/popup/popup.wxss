/* pages/popup/popup.wxss */

.page {
  width: 100%;
}

.backup {
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.3;
  position: fixed;
  top: 0;
  left: 0;
}

.wall {
  z-index: 2;
  width: 80%;
  height: 800rpx;
  overflow-y: scroll;
  background-color: white;
  position: fixed;                                                                                                                                                          
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20rpx;
  border-radius: 10rpx;
}

.item {
  display: flex;
  margin-bottom: 20rpx;
}

.submit {
  margin-top: 20rpx;
  color: white;
  background-color: tomato;
}

.textarea {
 width: 100%;
  border: 1px solid #eeeeee;
}

.placeholder-textarea {
  padding: 20rpx;
}

.currentLength {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #bbbbbb;
}

.choose {
  margin: 20rpx 0;
}

.img {
  width: 100%;
}








